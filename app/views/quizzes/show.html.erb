<h3>List questions</h3>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @quiz.each do | quiz | %>
    <tr>
      <td><%= quiz.question_content.html_safe %></td>
      <td class="answer"><%= quiz.answer %></td>
      <td><%= link_to "Edit", edit_question_path(quiz), { :class => "btn btn-default btn-sm" } %></td>
      <td><%= link_to "Delete", question_path(quiz), { :method => :delete, :class => "btn btn-default btn-sm" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= react_component('Student', { quiz_id: params[:id] }, { prerender: true }) %>

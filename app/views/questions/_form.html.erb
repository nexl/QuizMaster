<div class="form-group">
  <%= question.label :quizz_id, :class => "control-label col-sm-2" %>
  <div class="col-sm-6">
    <%= question.select(:quizz_id, options_for_select(list_quiz), :class => "form-control") %>
  </div>
</div>

<div class="form-group">
  <%= question.label :question, :class => "control-label col-sm-2" %>
  <div class="col-sm-9">
    <%= question.bootsy_area :question, :placeholder => "Question", :required => true, :class => "form-control", :rows => 10 %>
  </div>
</div>

<div class="form-group">
  <%= question.label :answer, :class => "control-label col-sm-2" %>
  <div class="col-sm-6">
    <%= question.text_field :answer, :placeholder => "Answer", :required => true, :class => "form-control" %>
  </div>
</div>
<% if !@has_quiz.empty?%>
  <div class="panel panel-default">
    <%= form_for @question, url: {action: "create"},:html => {:class => "form-horizontal"}   do | question | %>
     <%= heading_title("New Question")%>
     <%= render "form", :question => question %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= question.submit "Add new question", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  You should have at least one quiz before create a new question
<% end %>
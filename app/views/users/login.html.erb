<div class="panel panel-default">
  <%= feedback(flash[:success],'success') %>
  <%= feedback(flash[:error],'error') %>
  <%= heading_title("Sign In")%>
  <div class='row'>
    <div class='col-md-10 col-md-offset-2'>
      <%= form_for @user, url: login_path,:html => {:class => "form-horizontal"}   do | tag| %>
        <div class="form-group">
          <%= tag.label :email, :class => "control-label col-sm-2" %>
          <div class="col-sm-6">
          <%= tag.email_field :email, :placeholder => "Email", :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= tag.label :password, :class => "control-label col-sm-2" %>
          <div class="col-sm-6">
          <%= tag.password_field :password, :placeholder => "Password", :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
         <div class="col-sm-offset-2 col-sm-10">
          <%= tag.submit "Login", class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
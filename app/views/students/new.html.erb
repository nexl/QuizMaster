<%= form_for @student, url: {action: "create"},:html => {:class => "form-horizontal"}   do | student | %>

 <div class="form-group">
  <%= student.label :token, :class => "control-label col-sm-2" %>
  <div class="col-sm-6">
    <%= student.select(:token, options_for_select(list_quiz), :class => "form-control") %>
  </div>
</div>

<div class="form-group">
  <%= student.label :full_name, :class => "control-label col-sm-2" %>
  <div class="col-sm-6">
    <%= student.text_field :full_name, :placeholder => "name", :required => true, :class => "form-control" %>
  </div>
</div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= student.submit "Add student", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
               